<UserControl
    x:Class="MainApplication.LoginDataListMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MainApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid ColumnDefinitions="160, 160, 160" RowDefinitions ="Auto, Auto, Auto">
		<ComboBox x:Name="CB_SortingMode" PlaceholderText="Sorting Mode" SelectedIndex="0" Grid.Row="0" Grid.Column="0" Margin="4" HorizontalAlignment="Stretch">
			<x:String>Name</x:String>
			<x:String>Url</x:String>
			<x:String>Username</x:String>
		</ComboBox>
		
		<ComboBox x:Name="CB_SortingOrientation" PlaceholderText="Sorting Orientation" SelectedIndex="0" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch">
			<x:String>Ascending</x:String>
			<x:String>Descending</x:String>
		</ComboBox>

		<ComboBox x:Name="CB_ExportMode" PlaceholderText="Export Mode" Grid.Row="2" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch">
			<x:String>Kapersky</x:String>
			<x:String>Google</x:String>
			<x:String>Microsoft</x:String>
		</ComboBox>
		
		<Button x:Name="BP_Import" Click="BP_Import_Click" Grid.Row="1" Grid.Column="0" Margin="4" HorizontalAlignment="Stretch">Import</Button>
		<Button x:Name="BP_Export" Click="BP_Export_Click" Grid.Row="2" Grid.Column="0" Margin="4" HorizontalAlignment="Stretch">Export</Button>
	</Grid>
</UserControl>
